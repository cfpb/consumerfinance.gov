{
  "name": "CFPB Newsroom",
  "query": {
    "size": 10,
    "sort": "date:desc",
    "doc_type": "newsroom,posts"
  },
  "filters": [
    {
      "or": [
        {
          "term": {
            "display_in_newsroom": "on"
          }
        },
        {
          "type": {
            "value": "newsroom"
          }
        }
      ]
    }
  ],
  "feed": {
    "feed_title": "CFPB Newsroom",
    "feed_url": "/newsroom/",
    "entry_title": "$$title$$",
    "entry_author": "$$author$$",
    "entry_content": "$$content$$",
    "entry_summary": "$$excerpt$$",
    "entry_url": "$$url$$",
    "entry_updated": "$$modified$$"
  }
}