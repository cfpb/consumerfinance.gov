#! /usr/bin/perl

my $workDir = $ENV{'CFGOV_HOME'};
my $currDir = `pwd`;

($workDir eq "") && 
die("\nPlease set the CFGOV_HOME environment variable to your vagrant directory.\n\n");

chdir($workDir) ||
 die("\nDirectory $workDir does not exist. Please check your CFGOV_HOME environment variable\n\n");

if ($#ARGV >= 0) {
	if ($ARGV[0] eq "start") {
		if (($#ARGV >= 1) && ($ARGV[1] eq "django")) {
			print("\nStarting Django server on port 8001\n");
			`vagrant ssh -c "/vagrant/bin/cfgovd start_django" &`;
		}
		else {
			print("\nStarting CF Gov Refresh VM...\n\n");
			my $argList = "";	
			for ($i=1;$i<=$#ARGV;$i++) {
				$argList .= $ARGV[$i]." ";
			}
			`vagrant up $argList`;
		}
		print("\nDone.\n");	
	}
	elsif ($ARGV[0] eq 'stop') {
		if (($#ARGV >= 1) && ($ARGV[1] eq "django")) {
			print("\nStopping Django server on port 8001\n");
			for ($i = 0; $i < 3; $i++) {
				`vagrant ssh -c "/vagrant/bin/cfgovd stop_django" 2>/dev/null`;
			}
		}
		else {
			print("\nStopping CF Gov Refresh VM...\n\n");
			`vagrant ssh -c "sudo shutdown -h now"`;
		}
		print("\nDone.\n");
	}
	elsif ($ARGV[0] eq 'init') {
		print("\nInitializing virtualbox guest add ons (may take a few minutes)...\n");
		`vagrant ssh -c "/vagrant/bin/cfgovd init_vbox" 2>/dev/null`;
		print("\nInitializing npm and node js (may take a few minutes)...\n");
		`vagrant ssh -c "/vagrant/bin/cfgovd init_node" 2>/dev/null`;
		print("\nInitializing local node js modules (may take a few minutes)...\n");
		`vagrant ssh -c "sh /vagrant/frontend.sh init" 2>/dev/null`;
	}
	elsif ($ARGV[0] eq 'assets') {
		print("\nRebuilding frontend assets...\n");
		`vagrant ssh -c "sh /vagrant/frontend.sh build" 2>/dev/null`;
	}
	elsif ($ARGV[0] eq 'log') {
		my $logData = `vagrant ssh -c "cat /home/vagrant/.cfgovOutput" 2>/dev/null`;
		print("\n$logData\n")
	}
	else { }
}
else {
	print "\nUsage: cfgov [init |start | stop | log | assets] [django]\n";
}
chdir($currDir);