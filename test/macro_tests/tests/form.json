{
    "file": "macros/util/form.html",
    "tests": [
        {
            "macro_name": "input",
            "arguments": [
                {
                    "label": "Test",
                    "type": "email",
                    "required": true,
                    "disabled": false
                }
            ],
            "assertions": [
                {
                    "selector": ".form-label-header",
                    "assertion": "exists"
                },
                {
                    "selector": "input.input__long",
                    "assertion": "exists"
                }
            ]
        },
        {
            "macro_name": "textarea",
            "arguments": [
                {
                    "label": "Test",
                    "helperText": "false",
                    "required": true,
                    "disabled": false
                }
            ],
            "assertions": [
                {
                    "selector": ".form-label-header",
                    "assertion": "exists"
                },
                {
                    "selector": "textarea.input__long",
                    "assertion": "exists"
                }
            ]
        },
        {
            "macro_name": "select",
            "arguments": [
                {
                    "label": "Test",
                    "placeholder": "placeholder",
                    "fields": ["one", "two", "three"],
                    "size": "1",
                    "required": true,
                    "disabled": false
                }
            ],
            "assertions": [
                {
                    "selector": ".custom-select_select",
                    "assertion": "exists"
                }
            ]
        },
        {
            "macro_name": "radio_big",
            "arguments": [
                {
                    "legend": "Test",
                    "fields": ["one", "two", "three"],
                    "size": "1",
                    "required": true,
                    "disabled": false
                }
            ],
            "assertions": [
                {
                    "selector": ".form-label-header",
                    "assertion": "exists"
                }
            ]
        }
    ]
